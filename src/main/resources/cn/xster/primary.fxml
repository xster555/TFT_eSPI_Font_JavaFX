<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainPane" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.xster.controllers.PrimaryController">
  <children>
   <Label text="TFT_eSPI Font Generator">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Label>
      <HBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox spacing="10.0">
               <children>
                  <HBox>
                     <children>
                        <Label text="Fonts available " />
                        <Label fx:id="fontsNum" text="(*)" />
                     </children>
                  </HBox>
                  <ListView fx:id="fontListView" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Font size" />
                        <Spinner fx:id="fontSizeSpinner" editable="true" prefWidth="100.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="110.0" text="Char(s) to export" />
                        <TextField fx:id="charToExport" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="110.0" text="Output file" />
                        <TextField fx:id="outputFileName" HBox.hgrow="ALWAYS" />
                        <Label text=".h" />
                     </children>
                  </HBox>
                  <VBox fx:id="previewContainer" prefHeight="300.0" prefWidth="250.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                  </VBox>
               </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <Button maxHeight="50.0" minHeight="50.0" mnemonicParsing="false" onAction="#handleExport" prefHeight="50.0" prefWidth="100.0" text="Export *.h">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Button>
  </children>
</VBox>
